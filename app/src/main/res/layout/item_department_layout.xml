<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"

    >

    <TextView
        android:id="@+id/button_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:textAlignment="viewStart"
        android:padding="@dimen/small_margin"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/title"
        android:textColor="@color/black_faded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/image_department"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/button_department"
              app:layout_constraintStart_toStartOf="@id/button_department"
        app:layout_constraintEnd_toEndOf="@id/button_department"
        android:background="@color/colorPrimary"
       android:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>