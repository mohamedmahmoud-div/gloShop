<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_transparent"
    tools:context=".ui.main.carts.ConfirmPaymentFragment"
    android:layout_marginBottom="@dimen/small_margin"
    android:layout_gravity="center_vertical"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_confirm_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        app:cardElevation="30dp"
        app:cardCornerRadius="@dimen/padding_10"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_your_order_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/your_order"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                />

            <TextView
            android:id="@+id/text_header_shipping_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_your_order_header"
            android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:text="@string/shipping_fees"
                android:layout_marginStart="@dimen/activity_vertical_margin"
            />

            <TextView
                android:id="@+id/text_shipping_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_your_order_header"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"
                android:text="@string/shipping_fees"
                android:layout_marginEnd= "@dimen/activity_vertical_margin"
                />


            <TextView
            android:id="@+id/total_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_header_shipping_fees"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:text="@string/total"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            />

            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/total_header"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"
                android:text="@string/shipping_fees"
                android:layout_marginEnd= "@dimen/activity_vertical_margin"
                />

            <TextView
                android:id="@+id/arrive_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_header"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:text="@string/arrival_date"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                />

            <TextView
                android:id="@+id/text_arrive_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/arrive_header"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"
                android:text="@string/shipping_fees"
                android:layout_marginEnd= "@dimen/activity_vertical_margin"
                />
            <TextView
                android:id="@+id/discount_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_arrive_date"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:text="@string/discount"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/text_discount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/discount_header"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd= "@dimen/activity_vertical_margin"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image_promo_code"
                android:layout_width="@dimen/ic_width"
                android:layout_height="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_apply_promo_code"
                app:layout_constraintBottom_toBottomOf="@id/btn_apply_promo_code"
                android:background="@drawable/ic_promocode"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />
            <Button
                android:id="@+id/btn_apply_promo_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toBottomOf="@id/text_discount_value"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:text="@string/apply_promo_code"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/colorPrimaryDark"
                android:paddingHorizontal="@dimen/small_margin"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
            <EditText
                android:id="@+id/edit_promo_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_promo_code"
                app:layout_constraintEnd_toStartOf="@id/btn_apply_promo_code"
                app:layout_constraintTop_toBottomOf="@id/text_discount_value"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginStart="@dimen/small_margin"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_close_web_view"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/sections_margin"
        android:visibility="gone"

        />
    <Button
        android:id="@+id/btn_confirm_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_confirm_payment"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:text="@string/confirm_payment"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/black"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/activity_vertical_margin"
        />
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_close_web_view"
        />
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        android:elevation="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
   />
</androidx.constraintlayout.widget.ConstraintLayout>