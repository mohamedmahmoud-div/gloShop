<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/fragment_vertical_margin"
    android:background="#00FFFFFF"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/size_card"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/size_card"
        app:cardElevation="30dp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/small_margin">

            <ImageView
                android:id="@+id/image_product_checkout"
                android:layout_width="@dimen/image_size_medium"
                android:layout_height="@dimen/image_size_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/small_margin"
                android:background="@drawable/image_round"
                />

            <TextView
                android:id="@+id/text_product_name_checkout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:fontFamily="@font/poppins_bold"
                android:lines="1"
                android:text="Product Name "
                android:textColor="@color/black"
                android:textSize="@dimen/subtitle"
                app:layout_constraintStart_toEndOf="@id/image_product_checkout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:id="@+id/text_product_category_checkout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:fontFamily="@font/poppins_medium"
                android:lines="1"
                android:text="Product Name "
                android:textColor="@color/product_name_color"
                android:textSize="@dimen/subtitle"
                app:layout_constraintStart_toEndOf="@id/image_product_checkout"
                app:layout_constraintTop_toBottomOf="@id/text_product_name_checkout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                />

            <TextView
                android:id="@+id/text_product_price_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:fontFamily="@font/poppins_bold"
                android:text="500,00"
                android:textColor="@color/red_rate"
                android:textSize="@dimen/subtitle"
                app:layout_constraintStart_toEndOf="@id/image_product_checkout"
                app:layout_constraintTop_toBottomOf="@id/text_product_category_checkout"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/le"
                android:textColor="@color/red_rate"
                android:textSize="@dimen/subtitle"
                app:layout_constraintStart_toEndOf="@id/text_product_price_checkout"
                app:layout_constraintTop_toBottomOf="@id/text_product_category_checkout"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>