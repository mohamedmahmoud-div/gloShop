<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/text_buyer_review_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:fontFamily="@font/poppins_bold"
    android:text="Mohamed MHmoud "
    android:textColor="@color/black"
    android:textSize="@dimen/title"
    android:layout_marginStart="@dimen/small_margin"
    />
<TextView
    android:id="@+id/text_buyer_review_comment"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/text_buyer_review_name"
    app:layout_constraintStart_toStartOf="@id/text_buyer_review_name"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="@dimen/sections_margin"
    />
    <LinearLayout
        android:id="@+id/layout_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_buyer_review_comment"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/red_rate"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        >
        <ImageView
            android:layout_marginStart="@dimen/small_margin"
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:background="@android:drawable/star_off"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:backgroundTint="@color/white"
            />

        <TextView
            android:id="@+id/text_buyer_rating_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="4.5"
            android:layout_marginEnd="@dimen/small_margin"
            android:textSize="@dimen/size_body"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>